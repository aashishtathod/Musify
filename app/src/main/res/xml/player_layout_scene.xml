<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:id="@id/ivSongImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/transparentView"
            android:background="@color/dark_gray"
            android:layout_marginTop="-16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivSongImage">

            <CustomAttribute
                app:attributeName="background"
                app:customColorDrawableValue="@color/dark_gray" />

        </Constraint>

        <Constraint
            android:id="@id/tvSongName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/tvSingerName"
            app:layout_constraintStart_toEndOf="@+id/ivSongImage"
            app:layout_constraintEnd_toStartOf="@id/btnPlayPause"
            app:layout_constraintTop_toTopOf="@+id/ivSongImage" />

        <Constraint
            android:id="@id/tvSingerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivSongImage"
            app:layout_constraintStart_toStartOf="@+id/tvSongName"
            app:layout_constraintEnd_toStartOf="@id/btnPlayPause"
            app:layout_constraintTop_toBottomOf="@id/tvSongName"
            app:layout_constraintVertical_chainStyle="packed" />


        <Constraint
            android:id="@id/btnPlayPause"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/transparent"
            app:layout_constraintBottom_toBottomOf="@id/tvSingerName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvSongName">

            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="0" />

        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/expanded">

        <Constraint
            android:id="@id/ivSongImage"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="60dp"
            android:src="@color/text_gray"
            android:contentDescription=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@id/transparentView"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <CustomAttribute
                app:attributeName="background"
                app:customColorDrawableValue="@color/black" />

        </Constraint>

        <Constraint
            android:id="@id/tvSongName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="60dp"
            android:layout_marginStart="16dp"
            android:text="Lorem Ipsum"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivSongImage" />

        <Constraint
            android:id="@id/tvSingerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/text_gray"
            android:layout_marginTop="8dp"
            android:text="Lorem Ipsum"
            app:layout_constraintStart_toStartOf="@+id/tvSongName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSongName" />

        <Constraint
            android:id="@id/btnPlayPause"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvSingerName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="1" />

        </Constraint>

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/expanded"
        app:constraintSetStart="@+id/collapsed"
        app:motionInterpolator="easeInOut">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/ivSongImage" />

        <OnClick
            app:clickAction="transitionToEnd"
            app:targetId="@id/ivSongImage" />

    </Transition>

</MotionScene>
