<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="12dp">

    <ImageView
        android:id="@+id/ivSongImage"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSongName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Attention"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintEnd_toStartOf="@id/ibOptions"
        app:layout_constraintStart_toEndOf="@+id/ivSongImage"
        app:layout_constraintTop_toTopOf="@+id/ivSongImage" />

    <TextView
        android:id="@+id/tvSingerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Attention"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivSongImage"
        app:layout_constraintEnd_toEndOf="@id/tvSongName"
        app:layout_constraintStart_toStartOf="@+id/tvSongName"
        app:layout_constraintTop_toBottomOf="@+id/tvSongName" />

    <ImageButton
        android:id="@+id/ibOptions"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivSongImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivSongImage" />

</androidx.constraintlayout.widget.ConstraintLayout>